<%- include('header') -%>
<div class="detail">
  <div class="reviewModal_background">
    <div class="reviewModal">
      <form action="" method="post">
        <header class="reviewHeader">
          <div class="dummy">dummy</div>
          <h3>Review</h3>
          <input type="submit" value="submit" />
        </header>
        <div class="rate">
          <span>Rate</span>
          <select name="rate">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <textarea
          name="comment"
          cols="30"
          rows="10"
          placeholder="Write a comment."
        ></textarea>
      </form>
    </div>
  </div>
  <div class="info1">
    <img width="180px" height="240px" src="<%= movie.poster %>" alt="" />
    <h1 class="title"><%= movie.title %></h1>
    <div class="detailInfo">
      <span><%= movie.year %> <%= movie.genres.join('|') %></span>
    </div>
    <div>
      <svg
        class="w-6 h-6"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        width="12px"
      >
        <path
          d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
        ></path>
      </svg>
      <span><%= movie.rating %></span>
    </div>
    <% if(loggedIn) { %>
    <div class="review">
      <svg
        class="w-6 h-6"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        width="25px"
      >
        <path
          d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
        ></path></svg
      >Review
    </div>
    <% } %>
  </div>

  <div class="info2">
    <div class="cast">
      <h3>Cast</h3>
      <div class="castInfo">
        <div class="person">
          <div class="ele">
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              width="30px"
            >
              <path
                fill-rule="evenodd"
                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <div class="ele"><%= movie.director %></div>
          <div class="ele">Director</div>
        </div>
        <div class="person">
          <div class="ele">
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              width="30px"
            >
              <path
                fill-rule="evenodd"
                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <div class="ele"><%= movie.actors[0] %></div>
          <div class="ele">Actor</div>
        </div>
        <div class="person">
          <div class="ele">
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              width="30px"
            >
              <path
                fill-rule="evenodd"
                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <div class="ele"><%= movie.actors[1] %></div>
          <div class="ele">Actor</div>
        </div>
      </div>
    </div>
    <div class="comment">
      <h3>Comment</h3>
    </div>
  </div>
</div>
<script src="/review.js"></script>
<%- include('footer') -%>
